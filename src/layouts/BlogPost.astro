---
import Layout from './Layout.astro';
import type { CollectionEntry } from 'astro:content';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, image } = Astro.props;
---

<Layout title={title}>
  <article class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 pt-32">
    <div class="relative rounded-2xl overflow-hidden mb-8 aspect-video">
      <div class="absolute inset-0 bg-gradient-to-br from-primary/20 to-secondary/20"></div>
      <img src={image} alt={title} class="w-full h-full object-cover" />
    </div>

    <div class="prose prose-lg dark:prose-invert max-w-none">
      <h1 class="text-4xl font-bold mb-4">{title}</h1>
      <p class="text-gray-600 dark:text-slate-400 mb-8">{description}</p>
      <div class="text-gray-500 dark:text-slate-500 mb-8">
        Published on {pubDate.toLocaleDateString('en-US', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
        })}
      </div>
      <slot />
    </div>
  </article>
</Layout>