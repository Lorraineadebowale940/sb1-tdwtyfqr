<div class="absolute inset-0 pointer-events-none" aria-hidden="true">
  <!-- Background dots -->
  <div class="absolute right-0 top-0 -z-10">
    <svg width="404" height="404" fill="none" viewBox="0 0 404 404" aria-hidden="true">
      <defs>
        <pattern id="dots-1" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
          <circle cx="10" cy="10" r="2" class="fill-gray-200 dark:fill-slate-700" />
        </pattern>
      </defs>
      <rect width="404" height="404" fill="url(#dots-1)" />
    </svg>
  </div>
  
  <!-- Quirky shapes -->
  <div class="absolute left-1/2 transform -translate-x-1/2 bottom-0 pointer-events-none -z-10" aria-hidden="true">
    <svg width="1360" height="578" viewBox="0 0 1360 578">
      <defs>
        <linearGradient id="gradient-1" x1="50%" x2="50%" y1="0%" y2="100%">
          <stop offset="0%" class="stop-color-primary" style="stop-color: #5419A5; stop-opacity: 0.075;" />
          <stop offset="100%" class="stop-color-secondary" style="stop-color: #158994; stop-opacity: 0.15;" />
        </linearGradient>
        <linearGradient id="gradient-2" x1="50%" x2="50%" y1="0%" y2="100%">
          <stop offset="0%" style="stop-color: #5419A5; stop-opacity: 0.05;" />
          <stop offset="100%" style="stop-color: #158994; stop-opacity: 0.1;" />
        </linearGradient>
      </defs>
      <g fill="url(#gradient-1)">
        <circle cx="170" cy="169" r="32" />
        <circle cx="644" cy="422" r="64" />
        <circle cx="1088" cy="256" r="48" />
      </g>
      <path d="M0 410c0 0 190-90 480-20c290 70 480 140 880 0" fill="none" stroke="url(#gradient-2)" stroke-width="2" />
    </svg>
  </div>

  <!-- Floating elements -->
  <div class="absolute top-1/4 left-1/4 -translate-x-1/2 -translate-y-1/2 -z-10">
    <div class="w-24 h-24 rounded-full bg-gradient-to-br from-primary/10 to-secondary/10 blur-2xl"></div>
  </div>
  <div class="absolute top-1/3 right-1/4 translate-x-1/2 -translate-y-1/2 -z-10">
    <div class="w-32 h-32 rounded-full bg-gradient-to-br from-secondary/10 to-primary/10 blur-2xl"></div>
  </div>
</div>