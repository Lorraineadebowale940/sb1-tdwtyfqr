---
import Layout from '../layouts/Layout.astro';
import CaseStudiesTestimonials from '../components/CaseStudiesTestimonials.astro';

const caseStudies = [
  {
    title: "10x Growth in Speech Therapy Practice",
    client: "Karina - Speech & Language Therapy",
    description: "A remarkable transformation of a speech therapy practice, combining business growth with social impact.",
    results: [
      "10x increase in client base",
      "Doubled service rates",
      "Established patient subsidy fund",
      "Improved service accessibility"
    ],
    image: "https://images.unsplash.com/photo-1573497019940-1c28c88b4f3e",
    icon: "M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
  },
  {
    title: "Retail Training Revolution",
    client: "UK's Top 4 Retailers",
    description: "Transformed the training and induction process for major UK retailers, significantly improving efficiency and performance.",
    results: [
      "Reduced training time from 5 to 3 days",
      "Decreased buddy time from 8 to 5 days",
      "Increased productivity from 110 to 170 IPH",
      "Optimized picking processes"
    ],
    image: "https://images.unsplash.com/photo-1582213782179-e0d53f98f2ca",
    icon: "M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4"
  },
  {
    title: "Swimming Lesson Capacity Optimization",
    client: "Nationwide Leisure Corporation",
    description: "Doubled swimming lesson capacity while maintaining high customer satisfaction and retention rates.",
    results: [
      "100% increase in lesson capacity",
      "150+ pupils per half hour",
      "Improved facility utilization",
      "Enhanced customer satisfaction"
    ],
    image: "https://images.unsplash.com/photo-1600965962361-9035dbfd1c50",
    icon: "M21 12a9 9 0 11-18 0 9 9 0 0118 0z M9 10a1 1 0 011-1h4a1 1 0 011 1v4a1 1 0 01-1 1h-4a1 1 0 01-1-1v-4z"
  },
  {
    title: "Food Business Success Story",
    client: "University Start-up to National Success",
    description: "Guided a university pop-up stand to become a major corporate catering service.",
    results: [
      "Secured major corporate clients",
      "Expanded to national festivals",
      "Developed scalable operations",
      "Built strong brand presence"
    ],
    image: "https://images.unsplash.com/photo-1414235077428-338989a2e8c0",
    icon: "M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"
  },
  {
    title: "Public Speaking Transformation",
    client: "Kemi - Banking Professional",
    description: "Transformed a banking professional into a compelling public speaker reaching thousands.",
    results: [
      "Standing ovation performances",
      "Reached thousands of employees",
      "Developed signature speech",
      "Enhanced corporate influence"
    ],
    image: "https://images.unsplash.com/photo-1475721027785-f74eccf877e2",
    icon: "M15.536 8.464a5 5 0 010 7.072m2.828-9.9a9 9 0 010 12.728M5.586 15H4a1 1 0 01-1-1v-4a1 1 0 011-1h1.586l4.707-4.707C10.923 3.663 12 4.109 12 5v14c0 .891-1.077 1.337-1.707.707L5.586 15z"
  },
  {
    title: "Innovative Recruitment Success",
    client: "Corporate Cleaning Company",
    description: "Implemented cost-effective recruitment strategy while promoting social responsibility.",
    results: [
      "Reduced recruitment costs",
      "Successful internship program",
      "Global youth network access",
      "Enhanced CSR profile"
    ],
    image: "https://images.unsplash.com/photo-1600880292203-757bb62b4baf",
    icon: "M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
  }
];
---

<Layout title="Case Studies - Purple Kaizen">
  <main class="pt-32">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
      <div class="text-center max-w-3xl mx-auto mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-primary mb-6">Success Stories</h1>
        <p class="text-xl text-gray-600">Real transformations and measurable results from businesses we've helped evolve.</p>
      </div>
      
      <div class="space-y-16">
        {caseStudies.map((study, index) => (
          <div class={`flex flex-col lg:flex-row gap-8 items-center ${index % 2 === 1 ? 'lg:flex-row-reverse' : ''}`}>
            <div class="w-full lg:w-1/2">
              <div class="relative group">
                <div class="absolute -inset-4">
                  <div class="w-full h-full mx-auto rotate-2 opacity-30 blur-lg filter bg-gradient-to-br from-primary to-secondary group-hover:opacity-40 transition duration-200"></div>
                </div>
                <div class="relative">
                  <div class="aspect-w-16 aspect-h-9 rounded-2xl overflow-hidden shadow-xl">
                    <img 
                      src={study.image} 
                      alt={study.title}
                      class="w-full h-full object-cover transform group-hover:scale-105 transition duration-500"
                    />
                    <div class="absolute inset-0 bg-gradient-to-br from-primary/80 to-secondary/80 opacity-0 group-hover:opacity-90 transition-all duration-300 flex items-center justify-center">
                      <div class="text-white p-8 opacity-0 group-hover:opacity-100 transform group-hover:translate-y-0 translate-y-4 transition-all duration-300">
                        <h4 class="text-xl font-bold mb-4">Key Results:</h4>
                        <ul class="space-y-3">
                          {study.results.map(result => (
                            <li class="flex items-start">
                              <svg class="w-5 h-5 mr-3 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                              </svg>
                              <span class="text-lg">{result}</span>
                            </li>
                          ))}
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            
            <div class="w-full lg:w-1/2 space-y-6">
              <div class="flex items-center space-x-4">
                <div class="w-16 h-16 bg-gradient-to-br from-primary to-secondary rounded-2xl p-3 shadow-lg transform -rotate-6 group-hover:rotate-0 transition-transform duration-300">
                  <svg class="w-full h-full text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={study.icon}></path>
                  </svg>
                </div>
                <div>
                  <h2 class="text-3xl font-bold text-primary">{study.title}</h2>
                  <p class="text-lg text-secondary">{study.client}</p>
                </div>
              </div>
              
              <div class="bg-white dark:bg-slate-900 rounded-xl p-6 shadow-lg border border-gray-100 dark:border-slate-800">
                <p class="text-lg text-gray-600 dark:text-slate-400 leading-relaxed">
                  {study.description}
                </p>
                <div class="mt-6">
                  <a 
                    href="/contact" 
                    class="inline-flex items-center px-6 py-3 rounded-full bg-gradient-to-r from-primary to-secondary text-white font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200"
                  >
                    Learn More
                    <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
    
    <CaseStudiesTestimonials />
  </main>
</Layout>